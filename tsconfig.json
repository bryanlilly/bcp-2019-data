{
    "compilerOptions": {

        "baseUrl": ".",
        "esModuleInterop": true,
        "declaration": false,
        "outDir": "dist/compiled",
        "removeComments": true,
        "moduleResolution": "classic",
        "strictNullChecks": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/*"
            ]
            // "@Types": [
            //     "src/types/*"
            // ]
        },
        "preserveConstEnums": true,
        "target": "es3",
        "traceResolution": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "references": []
}
